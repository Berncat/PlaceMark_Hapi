<form action="/category/{{category._id}}/add" method="POST" class="panel">
  <div class="panel-heading pr-3">
    <nav class="level">
      <!-- Left side -->
      <div class="level-left">{{category.name}} / Add Placemark</div>
      <!-- Right side -->
      <div class="level-right">
        <a href="/category/{{category._id}}" class="button is-dark">Back to view {{category.name}}</a>
      </div>
    </nav>
  </div>
  <div class="field-body panel-block">
    <div class="field">
      <label class="label">Name</label>
      <input class="input" type="text" placeholder="Enter name" name="name" required />
    </div>
    <div class="field">
      <label class="label">Latitude</label>
      <input class="input" type="number" placeholder="Enter latitude" name="lat"  min="-90" max="90" step="any" required/>
    </div>
    <div class="field">
      <label class="label">Longitude</label>
      <input class="input" type="number" placeholder="Enter longitude" name="lon" min="-180" max="180" step="any" required/>
    </div>
  </div>
  <div class="field-body panel-block">
    <div class="field">
      <label class="label">{{category.filter}}</label>
      <div class="control is-expanded">
        <div class="select is-fullwidth">
          <select name="filter">
            {{#each category.filterList}}
              <option value={{this}}>{{this}}</option>
            {{/each}}
            <option value="other"><b>Other</b></option>
          </select>
        </div>
      </div>
    </div>
    <div class="field">
      <label class="label">If other selected enter here</label>
      <input class="input" type="text" placeholder="Enter other" name="other"/>
    </div>
  </div>
  <div class="field-body panel-block">
    <div class="field">
      <label class="label">Description</label>
      <textarea class="textarea" type="text" placeholder="Enter description" name="desc"></textarea>
    </div>
  </div>
  <div class="panel-block">
    <button class="button is-info is-fullwidth">
      Submit
    </button>
  </div>
</form>