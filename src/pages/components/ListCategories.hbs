<nav class="panel">
  <div class="panel-heading pr-3">
    <nav class="level">
      <!-- Left side -->
      <div class="level-left">
        <div class="level-item">
          Categories
        </div>
        <div class="level-item">
          <a href="/dashboard/add" class="button is-dark is-outlined">
            <span class="icon">
              <i class="fas fa-plus"></i>
            </span>
          </a>
        </div>
      </div>
      <!-- Right side -->
      <div class="level-right">
      </div>
    </nav>
  </div>
  {{#each categories}}
    <div class="panel-block is-block">
      <nav class="level">
        <!-- Left side -->
        <div class="level-left">
          <span class="icon-text">
            <span class="icon">
              <i style="color:hsl(204, 86%, 53%);" class="fas fa-map-marker-alt"></i>
            </span>
            <span>
              <p class="title is-5">{{name}}</p>
              <p class="subtitle is-6"><i>Filter Name: {{filter}}</i></p>
            </span>
          </span>
        </div>
        <!-- Right side -->
        <div class="level-right">
          <p class="buttons">
            <a href="/category/{{_id}}" class="button is-success">
              <span class="icon">
                <i class="fas fa-eye"></i>
              </span>
            </a>
            <a href="/dashboard/edit/{{_id}}" class="button is-info">
              <span class="icon">
                <i class="fas fa-edit"></i>
              </span>
            </a>
            <a href="/dashboard/delete/{{_id}}" class="button is-danger">
              <span class="icon">
                <i class="fas fa-trash"></i>
              </span>
            </a>
          </p>
        </div>
      </nav>
    </div>
  {{/each}}
</nav>